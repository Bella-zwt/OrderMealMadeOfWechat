.container{
	width: 100%;
	position: relative;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	box-sizing: border-box;
}
.wrap{
	width: 100%;
	height: 200rpx;
	position: fixed;
	z-index: 9999;background: #fff;
	top: 0;
	left: 0;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.header-wrap{
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.search-warp{
	width: 500rpx;
	height: 80rpx;
	background-color: #e3e3e3;
	border-radius: 40rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.header-wrap>image{
	width: 60rpx;
	height: 60rpx;
	margin-left: 40rpx;
}
.search-warp image{
	width: 50rpx;
	height: 50rpx;
}
.search-warp input{
	width: 400rpx;
	height: 60rpx;
	padding: 0 10rpx;
}
.option-wrap{
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	box-sizing: border-box;
}
.option-wrap>view:first-child{
	margin-left: 50rpx;
}
.option-wrap>view:nth-child(n){
	margin-left: 80rpx;
}
.option{
	padding-bottom: 10rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: flex-start;
	box-sizing: border-box;
}
.top{
	width: 30rpx;
	height: 30rpx;
	margin-left: 2rpx;
	background-color: #e3e3e3;
	border-radius: 20rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.top image{
	width: 80%;
	height: 80%;
}
.bottom{
	height: 30rpx;
	margin-left: 2rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.bottom text{
	font-size: 20rpx;
}
.selected{
	border-bottom: 5rpx solid #F7C709;
}
.unselected{
	border-bottom: none;
}
.main-wrap{
	width: 100%;
	margin-top: 220rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
	box-sizing: border-box;
}
.left{
	width: 200rpx;
	height: 100%;
}
.right{
	width: 550rpx;
	height: 100%;
}
::-webkit-scrollbar { 
	width: 0; 
	height: 0; 
	color: transparent; 
}

.sc-l{
	width: 100%;
	height: 100%;
}
.sc-r{
	width: 100%;
	height: 100%;
}
.left .sc-item{
	width: 100%;
	height: 120rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.right .sc-item{
	width: 100%;
	height: 300rpx;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
	box-sizing: border-box;
}
 .sc-l .sc-item text{
	font-size: 30rpx;
	color: #808080;
}
.sc-r .sc-item>image{
	width: 200rpx;
	height: 200rpx;
}
.info-wrap{
	position: relative;
	flex: 1;
	height: 100%;
	margin-left: 20rpx;
	padding-right: 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	box-sizing: border-box;
}
.info-wrap .name{
	color: #000;
	font-size: 40rpx;
	font-weight: 400;
}
.price-wrap{
	width: 100%;
	position: absolute;
	bottom: 60rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
}
.info-wrap .price{
	margin-top: 20rpx;
	font-size: 40rpx;
	color: #FF4469;
}
.pricevip{
	font-size: 26rpx;
	color: #E6CB5D;
	margin-top: 5rpx;
}
.price-wrap .add-wrap{
	width: 60rpx;
	height: 60rpx;
	margin-right: 30rpx;
	border-radius: 30rpx;
/**	background: #E6CB5D;**/
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.price-wrap .add-wrap text{
	font-size: 50rpx;
	font-weight: 400;
	line-height: 60rpx;
}
.height{
	margin-top: 10rpx;
	padding: 0 8rpx;
	background: #e3e3e3;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.height text{
	margin-top: 10rpx;
	color: #808080;
	font-size: 30rpx;
	font-weight: 400;
}
