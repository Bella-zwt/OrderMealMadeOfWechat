.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}
.header{
  width: 100%;
  height: 130rpx;
  border-bottom: 1rpx solid #dbdbdb;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.header-content{
  font-size: 32rpx;
  position: absolute;
  left: 24rpx;
}
.deleteCart{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: absolute;
  right: 30rpx;
}
.delete-img{
  height: 42rpx;
  width: 42rpx;
}
.delete-content{
  font-size: 30rpx;
  color: #8a8a8a;
}
.food{
  width: 100%;
  border-bottom: 0.3px solid lightgray;
  height: 240rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.left-wrap{
  width: 30%;
  height: 240rpx;
}
.img{
  height: 160rpx;
  width: 200rpx;
  top: 40rpx;
  left: 30rpx;
  position: absolute;
}
.right-wrap{
  width: 70%;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.food-name{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}
.foodTitle{
  font-size: 42rpx;
}
.foodInfo{
  position: absolute;
  left: 30rpx;
  top: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
}
.foodPrice{
  color: #e16531;
  font-size: 44rpx;
}
.foodNum{
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  right: 50rpx;
  top: 8rpx;
}
.decrease{
  height: 60rpx;
  width: 60rpx;
}
.down-img{
  width: 60rpx;
  height: 60rpx;
}
.count{
  height: 60rpx;
  text-align: center;
}
.countNum{
  line-height: 60rpx;
  font-size: 44rpx;
}
.increase{
  height: 60rpx;
  width: 60rpx;
}
.up-img{
  height: 60rpx;
  width: 60rpx;
}
.foot{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  position: relative;
}
.pay{
  position: absolute;
  width: 200rpx;
  height: 80rpx;
  background-color: #e98f36;
  border-radius: 40rpx;
  line-height: 80rpx;
  top: 20rpx;
  left: 40%;
  bottom: 10rpx;
  color: white;
}