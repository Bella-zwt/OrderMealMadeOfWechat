.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}

.header-wrap {
  width: 100%;
  height: 836rpx;
  /* border: 1rpx solid #000; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}

.bg-wrap {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.bg-wrap>image {
  width: 100%;
  height: 100%;
  z-index: -1;
}

.cart {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  border-radius: 35rpx;
  background-color: rgba(111, 111, 111, 0.4);
  opacity: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.cart image {
  width: 70%;
  height: 70%;
}

.cai-info {
  width: 100%;
  padding: 0 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  box-sizing: border-box;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
}

.left {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  box-sizing: border-box;
}

.name-wrap {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}

.tab1 {
  background: #E6CB5D;
  border-radius: 5rpx;
  padding: 3rpx 8rpx 3rpx 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.tab1 text {
  font-size: 25rpx;
  color: #e3e3e3;
}

.cai-name {
  font-size: 42rpx;
  margin-left: 15rpx;
  font-weight: 400;
}

.salenum {
  font-size: 26rpx;
  color: #797979;
  margin-top: 20rpx;
}

.price {
  font-size: 50rpx;
  color: #ff0000;
  margin-top: 30rpx;
}

.pricevip {
  font-size: 26rpx;
  color: #E6CB5D;
}

.add-wrap {
  width: 260rpx;
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  background: #E6CB5D;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.add-wrap image {
  width: 40rpx;
  height: 40rpx;
}

.add-wrap text {
  font-size: 30rpx;
  font-weight: 500;
}

.other {
  width: 100%;
  height: 20rpx;
  background: #e8e8e8;
}

.body-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}

.content {
  width: 100%;
  display: flex;
  height: 300rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border: 1rpx solid lightgray;
}

.left-content {
  width: 20%;
  height: 300rpx;
  position: relative;
}

.left-img {
  position: absolute;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  border: 1rpx solid rgb(44, 43, 43);
  top: 50rpx;
  left: 30rpx;
}

.left-img image {
  height: 100rpx;
  width: 100rpx;
  padding: 10rpx 10rpx;
}

.right-content {
  width: 80%;
  height: 300rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.judgeName{
  position: absolute;
  top: 40rpx;
  left: 30rpx;
}
.userName{
  font-size: 44rpx;
  font-weight: bold;
}
.judgeTime{
  font-size: 30rpx;
  color: #928d8d;
  margin-left: 230rpx;
}
.judgeContent{
  position: absolute;
  top: 120rpx;
  left: 30rpx;
  width: 93%;
}
.judgeDetail{
  font-size: 28rpx;
}
