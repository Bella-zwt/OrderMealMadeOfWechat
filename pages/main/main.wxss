.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}
.swiper{
  height: 470rpx;
  width: 100%;
}
.switch{
  height: 200px;
}
.img{
  height: 100%;
  width: 100%;
}
.inner{
  height: 100%;
  width: 100%;
}
.body{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
}
.function{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
}
.order{
  width: 33%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
  position: absolute;
  left: 70rpx;
  top: 130rpx;
  background-color: #fdfbe6;
  border-radius: 40rpx;
  padding-top: 50rpx;
  padding-left: 50rpx;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgb(252, 224, 173);
}
.order>image{
  height: 150rpx;
  width: 150rpx;
}
.order>text{
  font-size: 50rpx;
  letter-spacing: 20rpx;
}
.scan{
  width: 33%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
  position: absolute;
  right: 70rpx;
  top: 130rpx;
  background-color: #fdfbe6;
  border-radius: 40rpx;
  padding-top: 50rpx;
  padding-left: 50rpx;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgb(252, 224, 173);
}
.scan>image{
  height: 150rpx;
  width: 150rpx;
}
.scan>text{
  font-size: 50rpx;
  letter-spacing: 10rpx;
}



.blank{
  height: 130px;
  width: 120px;
  border-radius: 10px;
  background-color: pink;
  float: left;
  margin-left: 8%;
  margin-top: 12%;
  text-align: center;
  line-height: 130px;
  font-size: 21px;
  letter-spacing: 5px;
  border: none;
}