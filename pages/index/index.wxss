.container{
  width: 100%;
  height: 1000rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
  position: relative;
  align-items: center;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 300rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.login{
  margin-top: 60px;
  width: 10em;
}
