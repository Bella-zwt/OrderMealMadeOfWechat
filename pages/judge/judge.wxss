.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}
.other {
  width: 100%;
  height: 20rpx;
  background: #e8e8e8;
}

.body-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}

.content {
  width: 100%;
  display: flex;
  height: 300rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border: 1rpx solid lightgray;
}

.left-content {
  width: 20%;
  height: 300rpx;
  position: relative;
}

.left-img {
  position: absolute;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  border: 1rpx solid rgb(44, 43, 43);
  top: 50rpx;
  left: 30rpx;
}

.left-img image {
  height: 100rpx;
  width: 100rpx;
  padding: 10rpx 10rpx;
}

.right-content {
  width: 80%;
  height: 300rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.judgeName{
  position: absolute;
  top: 40rpx;
  left: 30rpx;
}
.userName{
  font-size: 44rpx;
  font-weight: bold;
}
.judgeTime{
  font-size: 30rpx;
  color: #928d8d;
  margin-left: 230rpx;
}
.judgeContent{
  position: absolute;
  top: 120rpx;
  left: 30rpx;
  width: 93%;
}
.judgeDetail{
  font-size: 28rpx;
}